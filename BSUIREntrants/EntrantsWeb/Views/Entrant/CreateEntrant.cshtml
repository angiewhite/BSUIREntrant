@model EntrantsDomain.Entrant

@{
    ViewBag.Title = "CreateEntrant";
}



<div style="margin:10px" class="panel panel-success">
    <div class="panel-heading text-center"><h4>New entrant</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>First Name</label>
                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Last Name</label>
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Father's Name</label>
                @Html.TextBoxFor(x => x.FatherName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Birth Date (dd/mm/yyyy)</label>
                @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control", type = "date" })
            </div>
            <div class="form-group">
                <label>GPA</label>
                @Html.TextBoxFor(x => x.GPA, new { @class = "form-control", type = "number" })
            </div>
            <div class="form-group">
                <label>Town</label>
                @Html.TextBoxFor(x => x.Town, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Address</label>
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Phone Number (+375XXXXXXXXX format)</label>
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", type = "number" })
            </div>
            <div class="form-group">
                <label>Biography</label>
                <textarea name="Biography" id="Biography" cols="40" rows="5" class="form-control"></textarea>
            </div>
            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Check in"/>
            </div>
        }
    </div>
</div>